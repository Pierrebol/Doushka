<div class="back_button">
  <a class="btn btn-outline-secondary rounded" href=<%=disguises_path%> >Précédent</a>
</div>

<div class="d-flex">
  <div class="show-disguise-img">
    <% if @disguise.photo.attached? %>
      <%= cl_image_tag @disguise.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <img src="https://source.unsplash.com/HQ_USRr5AU4" alt="">
    <% end %>
  </div>

  <div class="show-disguise-infos">
    <div class="disguise-title">
      <h1><%= @disguise.title %></h1>
    </div>
    <div class="disguise-details">
      <h3><%= @disguise.category %></h3>
      <p><%= @disguise.description %></p>
    </div>
    <div class="disguise-details">
      <h3><%= @disguise.price_per_day%>€ la journée</h3>
    </div>
  </div>

  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Date de reservation</h2>

      <%= simple_form_for [@disguise, @booking] do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {id: "start_date"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {id: "end_date"} %>
        <%= f.button :submit, "Go", class: "btn btn-warning", id: "btn-submit-booking" %>
      <% end %>
      <button class="btn btn-warning hidden" id="btn-fake-booking"> test modal </button>
    </div>
  </div>

</div>

