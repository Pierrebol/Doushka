<div class="back_button">
  <a class="btn btn-outline-secondary rounded" href=<%=disguises_path%> >Précédent</a>
</div>

<div class="d-flex">
  <div class="show-disguise-img">
    <% if @disguise.photo.attached? %>
      <%= cl_image_tag @disguise.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <img src="https://source.unsplash.com/HQ_USRr5AU4" alt="">
    <% end %>
  </div>

  <div class="show-disguise-infos">
    <div class="disguise-title">
      <h1><%= @disguise.title %></h1>
    </div>
    <div class="disguise-details">
      <h3><%= @disguise.category %></h3>
      <p><%= @disguise.description %></p>
    </div>
    <div class="disguise-details">
      <h3><%= @disguise.price_per_day%>€ la journée</h3>
    </div>
  </div>

  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Date de réservation</h2>

      <%= simple_form_for [@disguise, @booking] do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {id: "start_date"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {id: "end_date"} %>
        <%= f.button :submit, "Go", class: "btn btn-warning" data-toggle="modal" data-target="#exampleModal" %>
      <% end %>
    </div>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
        <p>Woohoo, tu as bien réservé ton déguisement</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
          <div><%= button_to "Réserver un autre déguisement", disguises_path, :class => "btn-warning", :method => :get %></div>
        </div>
    </div>
  </div>
</div>

