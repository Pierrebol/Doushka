<div class="form-container">
    <h2>Add a disguise</h2>
    <%= simple_form_for(@disguise) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :category %>
    <%= f.input :gender %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create", class:"btn" %>
    <% end %>
</div>
